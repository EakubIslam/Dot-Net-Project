@model List<Bloggie.Web.Models.Domain.Tag>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags  - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if(Model != null && Model.Any())
    {
       <table class="table">
           <thead>
               <tr>
                   <th>Id</th>
                   <th>Name</th>
                   <th>Diplay Name</th>
                   <th> Action</th>
               </tr>
           </thead>
           <tbody>
               @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <button class="btn btn-success"><a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id" style="color: white;text-decoration: none;" >Edit</a></button>
                            <button class="btn btn-danger"><a asp-area="" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@tag.Id" style="color: white;text-decoration: none;">Delete</a> </button>
                        </td>
                    </tr>
                }
            </tbody>
       </table> 
    }
    else
    {
        <p>No Tags found!</p>
    }

</div>